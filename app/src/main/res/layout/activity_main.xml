<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Operasi Matematika"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="80dp"
        android:text="Masukan angka Pertama" />

    <EditText
        android:id="@+id/editawal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtawal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="97dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtkedua"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editawal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="152dp"
        android:text="Masukan angka kedua" />

    <EditText
        android:id="@+id/editkedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtkedua"
        android:layout_alignEnd="@+id/editawal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="169dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txtoperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="139dp"
        android:layout_marginTop="235dp"
        android:text="Pilih Operator" />

    <Button
        android:id="@+id/btnjumlah"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="192dp"
        android:text="+" />

    <Button
        android:id="@+id/btnkurang"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtawal"
        android:layout_alignTop="@+id/btnbagi"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp"
        android:text="-" />

    <Button
        android:id="@+id/btnkali"
        android:layout_width="51dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnkurang"
        android:layout_alignEnd="@+id/txtkedua"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:text="*" />

    <Button
        android:id="@+id/btnbagi"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnjumlah"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="62dp"
        android:text="/" />

    <TextView
        android:id="@+id/txthasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="172dp"
        android:layout_marginBottom="145dp"
        android:text="Hasil" />

    <EditText
        android:id="@+id/edithasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtkedua"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-33dp"
        android:layout_marginBottom="94dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center" />
</RelativeLayout>